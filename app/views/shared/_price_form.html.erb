
<div class="container margin-top">
  <div class="col-xs-12 col-md-offset-3 col-md-6">
    <div class="simple_form_for">
      <%= simple_form_for @price do |f| %>
        <div class = "row">
          <div class="col-xs-12">
            <%= f.input :name, label:"Titre du Massage" %>
          </div>
          <div class="col-xs-12 col-md-4">
            <%= f.input :number, label:"N°" %>
          </div>
          <div class="col-xs-12 col-md-4">
            <%= f.input :cost, label:"Prix (€)" %>
          </div>
          <div class="col-xs-12 col-md-4">
            <%= f.input :length, label:"Durée (minutes)" %>
          </div>
          <div class="col-xs-12">
            <%= f.input :description %>
          </div>
          <div class="col-xs-12">
            <%= f.submit "Sauvegarder ", class: "btn-search" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

