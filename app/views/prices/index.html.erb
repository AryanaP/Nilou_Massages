<div class="container">
  <div class="row">
    <div class = "col-xs-12 col-md-offset-2 col-md-8">
      <h1 class="text-center" >Tarifs </h1>

      <% if current_user %>
        <%= link_to "Ajouter un massage",new_price_path %>
      <% end %>

        <!-- TALK BUBBLE -->
      <% @prices.each do |price| %>
        <div class="row">

          <div class = "col-xs-6 col-md-4">
            <div id="talkbubble">
              <h4><%= price.name.upcase %></h4>
            </div>
            <i class="fa fa-money flex-price" aria-hidden="true"> <p><%= "#{price.cost} â‚¬" %></p> </i>
            <i class="fa fa-clock-o flex-length" aria-hidden="true"> <p><%= "#{price.length} min" %></p></i>
          </div>

          <div class = "col-xs-6 col-md-8">
            <span>
              <%= price.description %>
              <% if current_user %>
                <%= link_to edit_price_path(price) do %>
                  <i class="fa fa-pencil" aria-hidden="true"></i>
                <% end %>
                <%= link_to price_path(price), method: :delete do %>
                  <i class="fa fa-trash " aria-hidden="true"></i>
                <% end %>
              <% end %>
            </span>
          </div>

        </div>
      <% end %>

    </div>
  </div>
</div>
