<div class="container">
  <h1 class="text-center">Niloufer Massages - Evenements </h1>

  <div class="row">
    <div class = "col-xs-12 col-md-offset-2 col-md-8">
      <table>
        <thead>
          <td>Evenement</td>
          <td>Date</td>
          <td>Description</td>
          <% if current_user %>
            <td>
              <%= "Page Accueil" %>
            </td>
            <td>
              <%= "Modifier" %>
            </td>
          <% end %>
        </thead>
        <tbody>
          <% @events.each do |event| %>
          <tr>
            <td> <%= event.name %> </td>
            <td> <%= event.date.strftime('%a %d %b %Y') %> </td>
            <!-- ATTENTION A LA LANGUE DE LA DATE -->
            <td> <%= event.description %> </td>
            <!-- Boutons pour admin  -->
            <% if current_user %>
              <td>
                <% if event.home? %>
                  <i style="color:green" class="fa fa-check" aria-hidden="true"></i>
                <% else %>
                  <i style="color:red" class="fa fa-times" aria-hidden="true"></i>
                <% end %>
              </td>
              <td>
                <%= link_to edit_event_path(event) do %>
                  <i class="fa fa-pencil" aria-hidden="true"></i>
                <% end %>
                <%= link_to event_path(event), method: :delete do %>
                  <i class="fa fa-trash " aria-hidden="true"></i>
                <% end %>
              </td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
      <% if current_user %>
        <%= link_to "Ajouter un Evenement",new_event_path %>
      <% end %>
    </div>
  </div>

  <!-- Boutons pour admin  -->
</div>
